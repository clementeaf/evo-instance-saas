{
  "name": "evo-instance-saas",
  "version": "1.0.0",
  "description": "SaaS multi-tenant with Evolution API integration",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/dev-server.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "saas:start": "chmod +x scripts/start.sh && ./scripts/start.sh",
    "setup-whatsapp": "node scripts/setup-whatsapp.js",
    "send-message": "node scripts/send-message.js",
    "evolution:up": "docker-compose up -d",
    "evolution:down": "docker-compose down",
    "evolution:logs": "docker-compose logs -f evolution-api",
    "create:instance": "ts-node-dev src/scripts/createInstance.ts",
    "worker": "ts-node-dev src/worker/poll.ts",
    "db:bootstrap": "ts-node-dev src/scripts/bootstrapTables.ts",
    "deploy": "npm run build && serverless deploy",
    "deploy:dev": "npm run build && serverless deploy --stage dev",
    "deploy:prod": "npm run build && serverless deploy --stage prod",
    "sls:offline": "serverless offline --stage dev",
    "sls:logs": "serverless logs -f api --tail",
    "sls:remove": "serverless remove"
  },
  "keywords": [
    "saas",
    "whatsapp",
    "evolution-api",
    "multi-tenant"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-apigatewaymanagementapi": "^3.901.0",
    "@aws-sdk/client-dynamodb": "^3.450.0",
    "@aws-sdk/client-s3": "^3.450.0",
    "@aws-sdk/client-sqs": "^3.450.0",
    "@aws-sdk/lib-dynamodb": "^3.450.0",
    "@types/socket.io": "^3.0.1",
    "axios": "^1.6.0",
    "body-parser": "^1.20.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "nanoid": "^3.3.11",
    "openai": "^5.23.1",
    "serverless-http": "^4.0.0",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.153",
    "@types/express": "^4.17.21",
    "@types/node": "^20.9.0",
    "jest": "^29.7.0",
    "serverless": "^3.40.0",
    "serverless-offline": "^13.9.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  }
}
