# Server Configuration
PORT=3000
NODE_ENV=development

# Messaging Provider Configuration
# Options: 'evolution' or 'meta'
# Default: 'evolution'
MESSAGING_PROVIDER=evolution

# Evolution API Configuration (when using MESSAGING_PROVIDER=evolution)
EVOLUTION_API_BASE_URL=http://localhost:8080
EVOLUTION_API_API_KEY=
EVOLUTION_DRY_RUN=true

# Meta WhatsApp Cloud API Configuration (when using MESSAGING_PROVIDER=meta)
# To use Meta provider, you need:
# 1. Meta Developer Account
# 2. Business Verification
# 3. WhatsApp Business Account
# 4. System User Access Token
META_ACCESS_TOKEN=
META_PHONE_NUMBER_ID=

# URL p√∫blica del backend (ngrok/App Runner)
PUBLIC_WEBHOOK_URL=https://<tu-ngrok-o-dominio>

# WhatsApp Webhook Configuration
WA_WEBHOOK_SECRET=your-webhook-secret-for-hmac-validation

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# SQS Configuration
SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789012/your-queue-name

# DynamoDB Configuration
DYNAMODB_TABLE_PREFIX=evo-saas
DYNAMO_TABLE_SLOTS=saas_slots
DYNAMO_TABLE_BOOKINGS=saas_bookings
DYNAMO_ENDPOINT=
# opcional (http://localhost:8000 para dynamodb-local)

# S3 Configuration
S3_BUCKET_NAME=your-s3-bucket-name

# Worker/Bot Configuration
INSTANCE_NAME=wa-mvp
DEFAULT_BOT=menu-basic
TENANT_ID=mvp
SLOT_HOLD_MS=180000